<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BancoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/color_default</item>
        <item name="colorPrimaryVariant">@color/color_default</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.BancoApp" parent="Base.Theme.BancoApp" />

    <style name="Theme.EditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/color_default</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/color_default</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="cursorColor">@color/color_default</item>
        <item name="hintTextColor">@color/color_default</item>
        <item name="startIconTint">@color/color_default</item>
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">@color/color_default</item>
        <item name="android:textColorHint">@color/color_default</item>
        <item name="colorOnSurface">@color/color_default</item>
        <item name="colorPrimary">@color/color_default</item>
        <item name="placeholderTextColor">@color/color_default_transparent</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>